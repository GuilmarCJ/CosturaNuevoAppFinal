<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Bloc de Notas"
        app:titleTextColor="@color/white" />

    <!-- Barra de estado -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listo - 0 palabras"
        android:textSize="12sp"
        android:background="@color/light_gray"
        android:padding="8dp"
        android:gravity="center" />

    <!-- Barra superior - Operaciones básicas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_gray"
        android:padding="8dp">

        <Button
            android:id="@+id/btnNewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NUEVO"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/info_blue" />

        <Button
            android:id="@+id/btnSaveNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GUARDAR"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/success_green" />

        <Button
            android:id="@+id/btnLoadNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CARGAR"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/primary_color" />

        <Button
            android:id="@+id/btnShareNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COMPARTIR"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/info_blue" />

    </LinearLayout>

    <!-- Área de texto principal -->
    <EditText
        android:id="@+id/etNoteContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Escribe tus notas aquí..."
        android:gravity="top"
        android:padding="16dp"
        android:background="@null"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:scrollbars="vertical" />

    <!-- Barra inferior - Funciones avanzadas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:padding="8dp">

        <Button
            android:id="@+id/btnFormat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🎨 FORMATO"
            android:textSize="11sp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnTemplates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📋 PLANTILLAS"
            android:textSize="11sp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#9C27B0" />

        <Button
            android:id="@+id/btnTools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔧 HERRAMIENTAS"
            android:textSize="11sp"
            android:layout_marginStart="2dp"
            android:backgroundTint="#607D8B" />

    </LinearLayout>

</LinearLayout>