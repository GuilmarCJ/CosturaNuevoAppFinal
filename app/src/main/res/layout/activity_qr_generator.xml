<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENERADOR DE CÓDIGOS QR"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genera códigos QR permanentes y reutilizables"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Selector de Tipo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECCIONAR TIPO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/rgQrType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <RadioButton
                            android:id="@+id/rbEntry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ENTRADA"
                            android:textSize="14sp"
                            android:buttonTint="@color/success_green"
                            android:padding="16dp"
                            android:checked="true" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <RadioButton
                            android:id="@+id/rbExit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SALIDA"
                            android:textSize="14sp"
                            android:buttonTint="@color/error_red"
                            android:padding="16dp" />

                    </com.google.android.material.card.MaterialCardView>

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Información del QR -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN DEL QR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Tipo seleccionado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_qr_code"
                        app:tint="@color/primary_color"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo:"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvQrType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ENTRADA PERMANENTE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_green"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Tiempo de generación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/primary_color"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generado:"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvGeneratedTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="--/--/---- --:--:--"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Validez -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_infinite"
                        app:tint="@color/success_green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Validez:"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvExpireTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PERMANENTE - REUTILIZABLE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_green"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Información adicional -->
                <TextView
                    android:id="@+id/tvQrInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este código QR puede ser usado múltiples veces por todos los trabajadores"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Instrucciones específicas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/light_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 INSTRUCCIONES DE USO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Los trabajadores escanearán este QR para registrar su ENTRADA diaria"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Código QR -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivQrCode"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:background="@color/white"
                    android:padding="4dp"
                    android:contentDescription="Código QR generado" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔸 Imprimir y pegar en la pared 🔸"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="16dp"
                    android:textStyle="italic" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Acciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnGenerate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GENERAR NUEVO"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button" />

                <Button
                    android:id="@+id/btnSaveToGallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GUARDAR"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/warning_orange"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

            <Button
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPARTIR CÓDIGO QR"
                android:textAllCaps="false"
                android:backgroundTint="@color/success_green"
                android:textColor="@color/white"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>