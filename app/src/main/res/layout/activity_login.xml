<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header con logo -->
        <ImageView
            android:id="@+id/ivLoginLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/icono_costura"
            android:contentDescription="Logo Costura Pro"
            android:tint="@color/primary_color"
            android:alpha="0"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIAR SESIÓN"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            android:translationY="20dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvLoginSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa a tu cuenta"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="48dp"
            android:alpha="0"
            android:translationY="10dp" />

        <!-- Tarjeta de formulario -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLoginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background_gray"
            android:layout_marginBottom="24dp"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="1dp"
            android:alpha="0"
            android:translationY="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Campo Usuario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/primary_color"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuario"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:startIconDrawable="@drawable/icono_costura"
                    app:startIconTint="@color/primary_color"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/primary_color"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Texto olvidé contraseña -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textSize="14sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="italic"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ENTRAR"
            android:textAllCaps="false"
            app:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:rippleColor="@color/primary_dark"
            style="@style/Widget.Material3.Button"
            android:alpha="0"
            android:translationY="20dp" />

        <!-- ProgressBar mejorada -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:indeterminate="true"
            app:indicatorColor="@color/primary_color"
            app:trackColor="@color/light_gray"
            android:visibility="gone" />

        <!-- Mensaje de error -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/error_red"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="gone"
            android:alpha="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_exit"
                    android:tint="@color/white"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Error" />

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credenciales incorrectas"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnCloseError"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_expire"
                    android:tint="@color/white"
                    android:contentDescription="Cerrar" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>