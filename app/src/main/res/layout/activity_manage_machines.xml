<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <!-- Toolbar simplificado sin ícono -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="GESTIONAR MÁQUINAS"
        app:titleTextColor="@color/black" />

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón agregar -->
        <Button
            android:id="@+id/btnAddMachine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR MÁQUINA"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Lista de máquinas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMachines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Mensaje cuando no hay máquinas -->
        <TextView
            android:id="@+id/tvEmptyMachines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="No hay máquinas registradas\n\nPresione 'AGREGAR MÁQUINA' para comenzar"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>