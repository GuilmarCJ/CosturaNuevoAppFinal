<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    android:animateLayoutChanges="true">

    <!-- Logo con animación de escala -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="74dp"
        android:layout_height="99dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo Costura Pro"
        android:src="@drawable/icono_costura"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:alpha="0" />

    <!-- Título principal con animación de entrada -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COSTURA PRO"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:letterSpacing="0.05"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        android:translationY="20dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Gestión Textil"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:alpha="0"
        android:layout_marginBottom="32dp"
        android:letterSpacing="0.02"
        android:translationY="10dp" />

    <!-- Línea decorativa animada -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/primary_color"
        android:layout_marginBottom="32dp"
        android:alpha="0"
        android:scaleX="0" />

    <!-- Tarjeta de contenido con animación -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/background_gray"
        android:layout_marginBottom="24dp"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="1dp"
        android:alpha="0"
        android:translationY="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <!-- Icono de usuario con animación -->
            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person"
                android:layout_marginBottom="20dp"
                android:contentDescription="Icono usuario"
                android:rotation="0" />

            <!-- Botón con animaciones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="INICIAR SESIÓN"
                android:textAllCaps="false"
                app:backgroundTint="@color/primary_color"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_login"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:rippleColor="@color/primary_dark"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Información administrador con animación -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="1dp"
        android:alpha="0"
        android:translationY="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_manage_workers"
                android:layout_marginEnd="12dp"
                android:contentDescription="Icono administrador" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¿Eres administrador?\nContacta al dueño para obtener acceso."
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v2.1.0 • © 2024 Costura Pro"
        android:textSize="11sp"
        android:textColor="@color/light_gray"
        android:layout_marginTop="24dp"
        android:alpha="0" />

</LinearLayout>