<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con máquina y fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMachineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máquina Overlock"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvMachineNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº: 001"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Tipo de evento -->
            <TextView
                android:id="@+id/tvEventType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROBLEMA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_late"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Oct 2025 - 10:30 AM"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp" />

        <!-- Descripción del problema -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_primary"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPCIÓN DEL PROBLEMA:"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvProblemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La máquina no enhebra correctamente"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Solución (solo visible para problemas resueltos) -->
        <LinearLayout
            android:id="@+id/containerSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_success"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOLUCIÓN APLICADA:"
                android:textSize="12sp"
                android:textColor="@color/success_green"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se cambió la aguja y se lubricó"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>